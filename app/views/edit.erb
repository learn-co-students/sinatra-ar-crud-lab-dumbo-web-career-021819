<h1>Edit information for <%= @article.title %></h1>

<form action="/articles/<%= @article.id %>" method="post">
<input id="hidden" type="hidden" name="_method" value="PATCH">
  <ul>
    <li>
    <label for="title">Title:</label>
    <input id="title" name="article[title]" value=" <%= @article.title %> "></input>
    </li>
    <li>
    <label for="content">Content:</label>
    <input id="content" name="article[content]" value=" <%= @article.content %> "></input>
    </li>
    <input type="submit"></input>
  </ul>
</form>
